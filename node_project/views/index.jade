doctype html(lang='en')
head
	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge')
	meta(name='viewport', content='width=device-width, initial-scale=1')
	link(href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css', type='text/css', rel='stylesheet', media='screen,projection')
	link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
	title mySpot
body(style="background-color: #eee !important")
	nav
		.nav-wrapper.orange
			a(href='#' style="padding-left: 30px; font-size: large !important;") #{userName} 
				a.light(href='#' style="font-size: x-large !important;") spot
			ul.right
				li
					a.modal-trigger.waves-effect.waves-light(href='#modalNotificaciones' onClick="getNotifications()")
						i.material-icons add_alert  
				li
					a.modal-trigger.waves-effect.waves-light(href='#modalAmigos' onClick="getFriends()")
						i.material-icons person_pin
				li
					a.waves-effect.waves-light(href='/logout')
						i.material-icons input

	div#mainContainer.container(style="padding-top: 20px; padding-bottom: 100px;")


	footer(style="position:fixed; bottom: 0px; width:100%;")
		nav
			.nav-wrapper
				.row
					a.indigo.center.col.s4.modal-trigger.waves-effect.waves-light(href='#modalPost' style="height:100%")
						i.material-icons comment
					a
						.red.center.col.s4.waves-effect.waves-light
							i.mdi-image-photo
							form#IP_form(method='post', enctype='multipart/form-data', action= '/saveImage' style="position: absolute; top:0px; width: 100%; height: 100%;")
								input(type='file', name='image' accept="image/*" style="opacity: 0; width: 100%; height: 100%;")


					a
						.orange.center.col.s4.waves-effect.waves-light(style="height:100%")
							i.material-icons location_on        



	#modalPost.modal.modal-fixed-footer
		.modal-content
			h4 Nuevo Post
			.row 
				form.col.s12
					.row
						.input-field.col.s12
							input#TP_text.validate(type='text')
							label(for='textarea1') Contenido
		.modal-footer
			a.modal-action.modal-close.waves-effect.waves-green.btn-flat(onClick='uploadText()') Post            
			a.modal-action.modal-close.waves-effect.waves-green.btn-flat Cancel  


	#modalAmigos.modal.bottom-sheet
		.modal-content#friendsContainer

	#modalNotificaciones.modal.bottom-sheet
		.modal-content#notificationsContainer



script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js')
script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/js/materialize.min.js')
script(type='text/javascript', src='js/jquery.form.js')
script(type='text/javascript', src='js/profileContent.js')
script(type='text/javascript', src='js/profileItem.js')
